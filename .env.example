# Database Configuration
DB_HOST=your-db-host
DB_PORT=3306
DB_NAME=your-db-name
DB_USER=your-db-user
DB_PASSWORD=your-db-password
DB_CONNECTION_LIMIT=10
DB_ACQUIRE_TIMEOUT=60000
DB_TIMEOUT=60000

# Server Configuration
PORT=4000
HOST=0.0.0.0
NODE_ENV=production
CORS_ORIGIN=https://your-app.onrender.com
SESSION_TIMEOUT=86400000

# File Upload Configuration
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760
TEMP_DIR=./uploads/temp

# Export Configuration
EXPORT_DIR=./exports
MAX_EXPORT_RECORDS=100000
EXPORT_TEMP_DIR=./exports/temp

# Security Configuration
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100
SESSION_SECRET=singapore-phone-detect-secret-change-in-production
CSRF_SECRET=singapore-phone-detect-csrf-secret-change-in-production
ENABLE_AUTH=true
ENABLE_HTTPS=false
HTTPS_PORT=443

# Authentication Configuration
DISABLE_AUTH=false
DISABLE_CSRF=false
AUTH_USERNAME=admin
AUTH_PASSWORD=password
VALID_API_KEYS=dev-api-key-12345

# Logging Configuration
LOG_LEVEL=info
ENABLE_FILE_LOGGING=false
LOG_DIR=./logs
MAX_LOG_FILES=5
MAX_LOG_SIZE=10m

# Singapore Phone Validation Configuration
SINGAPORE_PHONE_PATTERN=^[689]\d{7}$
BATCH_VALIDATION_SIZE=1000
ENABLE_VALIDATION_LOGGING=false

# Excel Processing Configuration
EXCEL_MAX_WORKSHEETS=10
EXCEL_MAX_ROWS_PER_SHEET=10000
EXCEL_PROCESSING_TIMEOUT=300000
ENABLE_EXCEL_MACROS=false
EXCEL_TEMP_DIR=./uploads/temp/excel
EXCEL_UPLOAD_DIR=./uploads/excel

# Dual-Table Configuration
BACKUP_TABLE_NAME=backup_table
CHECK_TABLE_NAME=check_table
AUTO_PROCESS_VALIDATION=true
VALIDATION_PROCESSING_DELAY=5000

# Graceful Shutdown Configuration
SHUTDOWN_TIMEOUT=30000
ENABLE_GRACEFUL_SHUTDOWN=true

# Health Check Configuration (for monitoring scripts)
HEALTH_CHECK_HOST=localhost
HEALTH_CHECK_PORT=3000
HEALTH_CHECK_TIMEOUT=10
