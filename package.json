{
    "name": "singapore-phone-detect",
    "version": "1.0.0",
    "description": "A web application that processes PDF and Excel files containing Singapore phone data and provides Excel export functionality",
    "main": "src/app.js",
    "scripts": {
        "start": "npm run build:css:prod && node src/app.js",
        "dev": "npm run build:css:prod && nodemon src/app.js",
        "build:css": "npx tailwindcss -i ./public/css/input.css -o ./public/css/tailwind-compiled.css",
        "build:css:prod": "npx tailwindcss -i ./public/css/input.css -o ./public/css/tailwind-compiled.css --minify",
        "dev:css": "concurrently \"npm run build:css\" \"npm run dev\"",
        "test": "jest",
        "start:prod": "./scripts/start.sh",
        "health-check": "./scripts/health-check.sh",
        "setup": "npm install && mkdir -p uploads uploads/temp uploads/excel uploads/pdf exports exports/temp logs",
        "migrate": "node scripts/migrate-backup-table.js",
        "migrate:backup-table": "node scripts/migrate-backup-table.js",
        "test:company-data": "node scripts/test-company-data.js",
        "test:company-updates": "node scripts/test-company-updates.js",
        "test:backup-to-check-flow": "node scripts/test-backup-to-check-flow.js"
    },
    "keywords": [
        "singapore",
        "phone",
        "pdf",
        "excel",
        "express",
        "mysql"
    ],
    "author": "",
    "license": "MIT",
    "dependencies": {
        "bcrypt": "^5.1.1",
        "cookie-parser": "^1.4.6",
        "cors": "^2.8.5",
        "csurf": "^1.11.0",
        "dotenv": "^16.3.1",
        "express": "^4.18.2",
        "express-session": "^1.18.2",
        "libphonenumber-js": "^1.12.25",
        "multer": "^1.4.5-lts.1",
        "mysql2": "^3.6.5",
        "pdf-parse": "^1.1.1",
        "xlsx": "^0.18.5",
        "xlsx-js-style": "^1.2.0"
    },
    "devDependencies": {
        "@tailwindcss/cli": "^4.1.16",
        "@tailwindcss/forms": "^0.5.10",
        "@tailwindcss/typography": "^0.5.19",
        "autoprefixer": "^10.4.21",
        "concurrently": "^9.2.1",
        "jest": "^29.7.0",
        "nodemon": "^3.0.2",
        "postcss": "^8.5.6",
        "supertest": "^7.1.4",
        "tailwindcss": "^4.1.16"
    }
}
